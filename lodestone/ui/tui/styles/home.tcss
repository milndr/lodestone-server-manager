ServerListing {
    align: center middle;
}

ServerDisplay {
    height: 5;
    border: round $secondary;
    max-width: 80;
}

ServerHead {
    height: 5;
    border: blank;
    max-width: 80;
}

Digits {
    dock: left;
    align: left middle;
    width: auto;
    margin: 0 3 0 2
}

DescBlock {
    width: auto;
}

#state.running { color: $text-success; }
#state.starting { color: $text-warning; }
#state.stopping { color: $text-warning; }
#state.stopped { color: $text-muted; }
#state.crashed { color: $text-error; }

#listing-action-buttons {
    padding: 0 0 0 0;
    margin: 0 0 0 0;
    outline: blank;
}

#select {
    margin-right: 1;
    margin-left: 1;
}

#start, #stop {
    width: auto;
}

#create {
    dock: right;
    margin-right: 1;
}
